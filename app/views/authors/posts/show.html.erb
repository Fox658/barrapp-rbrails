<% provide(:page_title, @post.title) %>
<% provide(:author, 'active') %>
<div class="row">
  <%= link_to 'Editar', edit_authors_post_path(@post), class: 'btn btn-sm btn-warning' %>
  <%= link_to 'Borrar', authors_post_path(@post), method: :delete, data: {
    confirm: 'Estas seguro?'}, class: 'btn btn-sm btn-danger' %>
</div>
<div class="row">
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 text-center">
    <h1><%= @post.title %></h1>
    <p><%= @post.display_day_published %></p>
    <%= @post.body.html_safe %>
  </div>
</div>
